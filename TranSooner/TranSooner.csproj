<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>transooner</AssemblyName>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>transooner</ToolCommandName>
    <Authors>Rojan Gh.</Authors>
    <Description>Easy to use web server for building web apps that use sql databases generated from c# classes</Description>
    <PackageProjectUrl>https://github.com/Sojaner/transooner</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Sojaner/transooner</RepositoryUrl>
    <RepositoryType>Github</RepositoryType>
    <PackageTags>language documentation translator translation csharp command-line dotnet source translate dotnet-core languages command-line-tool source-code dotnet-global-tool</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
    <PackageReference Include="DeepL.net" Version="1.8.0" />
    <PackageReference Include="Figgle.Generator" Version="0.5.1" />
    <PackageReference Include="Google.Cloud.Translation.V2" Version="3.3.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.9.2" />
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.FileSystemGlobbing" Version="8.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="ShellProgressBar" Version="5.2.0" />
  </ItemGroup>

</Project>
